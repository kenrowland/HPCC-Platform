<xs:schema
        xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified"
        xmlns:hpcc="someuri">
    <xs:include schemaLocation="types.xsd"/>
    <hpcc:insert hpcc:schemaPath="/Environment/Software">
        <xs:element name="Topology" hpcc:displayName="Topology" hpcc:itemType="topology" minOccurs="1" maxOccurs="unbounded" hpcc:class="component">
            <xs:complexType>
                <xs:sequence>
                    <xs:element name="Cluster" hpcc:itemType="topologyCluster" hpcc:class="elementSet" maxOccurs="unbounded" minOccurs="1">
                        <xs:complexType>
                            <xs:attribute name="alias" type="xs:string" hpcc:displayName="Alias"
                                          hpcc:tooltip="Alias for this cluster"/>
                            <xs:attribute name="name" type="xs:string" use="required" hpcc:displayName="Name"
                                          hpcc:uniqueKey="topology_cluster_name" hpcc:tooltip="Name for this cluster"/>
                            <xs:attribute name="prefix" type="xs:string" hpcc:displayName="Prifix"
                                          hpcc:tooltip="Prefix for ???"/>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
                <xs:attributeGroup ref="buildInfo"/>
                <xs:attribute name="name" type="xs:string" use="required" hpcc:displayName="Name"
                              hpcc:autoGenerateType="prefix_" hpcc:autoGenerateValue="topology"
                              hpcc:uniqueKey="topology_name" hpcc:tooltip="Name for this topology"/>
            </xs:complexType>
        </xs:element>
    </hpcc:insert>
</xs:schema>
