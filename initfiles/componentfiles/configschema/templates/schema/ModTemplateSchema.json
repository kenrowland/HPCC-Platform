{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for validating configuration modification template",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description" : "Name for the template"
        },
        "description": {
            "type": "string",
            "description" : "A description of the template"
        },
        "type": {
            "type": "string",
            "enum": [
                "new",
                "modification"
            ],
            "description" : "Type of template. Mainly used for filtering templates."
        },
        "configuration" : {
            "$ref": "#/definitions/configuration_def"
        },
        "configuration_name" : {
            "type" : "string",
            "description" : "Name of a previously defined configuration to use as the default for the template"
        },
        "variables": {
            "type": "array",
            "minItems": 0,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description" : "Name of the variable to which the input is assigned. This value is available using {{name}} anywhere in the template",
                        "pattern" : "^[A-Za-z0-9_]*$"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "string",
                            "iprange",
                            "ipaddress",
                            "hostname",
                            "member_set"
                        ],
                        "description" : "The variable type."
                    },
                    "prompt" : {
                        "type": "string",
                        "description" : "String shown to user during interactive input"
                    },
                    "description" : {
                        "type": "string",
                        "description" : "Description of what this value represents in the template."
                    },
                    "values" : {
                        "type": "array",
                        "items" : {
                            "type" : "string"
                        },
                        "description" : "Pre-assigned values"
                    },
                    "members" : {
                        "type" : "object",
                        "properties" : {
                            "names" : {
                                "type" : "array",
                                "items" : {
                                    "type" : "string"
                                }
                            },
                            "values" : {
                                "type" : "array",
                                "items" : {
                                    "type" : "array",
                                    "items" : {
                                        "type" : "string"
                                    }
                                }
                            }
                        }
                    },
                    "user_input": {
                        "type": "boolean",
                        "description" : "Set to true if user is required to provide a value for the variable in order to execute the template",
                        "default" : false
                    },
                    "global" : {
                        "type" : "boolean",
                        "default" : false,
                        "description" : "Save the value as a global variable as opposed to a local value"
                    },
                    "overwrite_ok" : {
                        "type" : "boolean",
                        "description" : "OK if variable exists, just overwrite the current value of the existing variable (use to override early defined variable values)"
                    }
                },
                "allOf" : [
                    {
                        "required" : [ "name", "type" ]
                    },
                    {
                        "oneOf" : [
                            {
                                "allOf" : [
                                    {
                                        "properties" : {
                                            "type" : {
                                                "enum" : [
                                                    "member_set"
                                                ]
                                            }
                                        },
                                        "not" : {
                                            "required" : [
                                                "values"
                                            ]
                                        }
                                    },
                                    {
                                        "properties" : {
                                            "type" : {
                                                "enum" : [
                                                    "member_set"
                                                ]
                                            }
                                        },
                                        "not" : {
                                            "required" : [
                                                "user_input"
                                            ]
                                        }
                                    },
                                    {
                                        "properties" : {
                                            "type" : {
                                                "enum" : [
                                                    "member_set"
                                                ]
                                            }
                                        },
                                        "required" : [ "members" ]
                                    }
                                ]
                            },
                            {
                                "properties" : {
                                    "type" : {
                                        "enum" : [
                                            "string",
                                            "ipaddress",
                                            "iprange",
                                            "hostname"
                                        ]
                                    }
                                },
                                "not" : {
                                    "required" : [
                                        "members"
                                    ]
                                }
                            }
                        ]
                    }
                ]
            },
            "description" : "Array of variables for template execution. Some may require user input."
        },
        "operations": {
            "type": "array",
            "minItems": 0,
            "items": {
                "$ref": "#/definitions/operation"
            }
        }
    },
    "allOf" : [
        {
            "required": [
                "name",
                "type",
                "operations"
            ]
        },
        {
            "oneOf" : [
                {
                    "not" : {
                        "required" : [ "configuration", "configuration_name" ]
                    }
                },
                {
                    "allOf" : [
                        {
                            "required" : [ "configuration" ]
                        },
                        {
                            "not" : {
                                "required" : [ "configuration_name" ]
                            }
                        }
                    ]
                },
                {
                    "allOf" : [
                        {
                            "required" : [ "configuration_name" ]
                        },
                        {
                            "not" : {
                                "required" : [ "configuration" ]
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "definitions": {
        "operation": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "action": {
                    "type" : "string",
                    "enum": [
                        "create",
                        "modify",
                        "find",
                        "delete",
                        "include",
                        "copy",
                        "insert_raw",
                        "noop"
                    ],
                    "description" : "Action to perform"
                },
                "condition" : {
                    "$ref" : "#/definitions/condition_def"
                },
                "break" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Used in development work for templates only. Forces code into an if block where a breakpoint can be set to debug execution of an operation"
                }
            },
            "oneOf": [
                {
                    "properties": {
                        "action": {
                            "enum": [
                                "create"
                            ]
                        },
                        "data": {
                            "$ref": "#/definitions/create_data_info"
                        }
                    },
                    "required": [
                        "action",
                        "data"
                    ]
                },
                {
                    "properties": {
                        "action": {
                            "enum": [
                                "modify"
                            ]
                        },
                        "data": {
                            "$ref": "#/definitions/modify_data_info"
                        }
                    },
                    "required": [
                        "action",
                        "data"
                    ]
                },
                {
                    "properties": {
                        "action": {
                            "enum": [
                                "find"
                            ]
                        },
                        "data": {
                            "$ref": "#/definitions/find_data_info"
                        }
                    },
                    "required": [
                        "action"
                    ]
                },
                {
                    "properties": {
                        "action": {
                            "enum": [
                                "delete"
                            ]
                        },
                        "data": {
                            "$ref": "#/definitions/delete_data_info"
                        }
                    },
                    "required": [
                        "action"
                    ]
                },
                {
                    "properties": {
                        "action": {
                            "enum": [
                                "include"
                            ]
                        },
                        "data": {
                            "$ref": "#/definitions/include_data_info"
                        }
                    },
                    "required": [
                        "action",
                        "data"
                    ]
                },
                {
                    "properties": {
                        "action": {
                            "enum": [
                                "copy"
                            ]
                        },
                        "data": {
                            "$ref": "#/definitions/copy_data_info"
                        }
                    },
                    "required": [
                        "action",
                        "data"
                    ]
                },
                {
                    "properties": {
                        "action": {
                            "enum": [
                                "insert_raw"
                            ]
                        },
                        "data": {
                            "$ref": "#/definitions/insert_data_info"
                        }
                    },
                    "required": [
                        "action",
                        "data"
                    ]
                },
                {
                    "properties": {
                        "action": {
                            "enum": [
                                "noop"
                            ]
                        }
                    },
                    "required": [
                        "action"
                    ]
                }
            ],
            "description" : "Definition of the operation to perform"
        },
        "create_data_info": {
            "type": "object",
            "properties": {
                "target" : {
                    "$ref" : "#/definitions/target_node_or_path"
                },
                "count": {
                    "type": "string",
                    "default" : "1",
                    "description" : "Number of times to execute the create action"
                },
                "start_index": {
                    "type": "string",
                    "default" : "0",
                    "description" : "Starting index for group variable value access (only applies to variable access)"
                },
                "node_type": {
                    "type": "string",
                    "pattern" : "^[A-Za-z0-9_{}]*$",
                    "description" : "The type of node to create (defined by the schema). Required"
                },
                "save": {
                    "$ref": "#/definitions/save_info",
                    "default" : {},
                    "description" : "Save info object for saving the created node IDs for use later"
                },
                "error_if_not_found": {
                    "type": "boolean",
                    "default" : true,
                    "description" : "Halt execution if no parent nodes selected for which this child would be created"
                },
                "node_value" : {
                    "$ref" : "#/definitions/node_value_new"
                },
                "populate_children" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Set to true to have all required children, as defined by the schema, auto populated"
                },
                "attributes": {
                    "$ref": "#/definitions/attribute_values_new"
                }
            },
            "required" : [
                "node_type",
                "target"
            ]
        },
        "modify_data_info": {
            "type": "object",
            "properties": {
                "target" : {
                    "$ref" : "#/definitions/target_node_or_path"
                },
                "save": {
                    "$ref": "#/definitions/save_info"
                },
                "error_if_not_found": {
                    "type": "boolean",
                    "default" : true
                },
                "node_value" : {
                    "$ref" : "#/definitions/node_value_mod"
                },
                "attributes": {
                    "$ref": "#/definitions/attribute_values_mod"
                }
            },
            "allOf": [
                {
                    "required" : [ "target" ]
                },
                {
                    "oneOf" : [
                        {
                            "required": [ "attributes" ]
                        },
                        {
                            "required": [ "node_value" ]
                        }
                    ]
                },
                {
                    "not" : {
                        "required" : [ "count" ]
                    }
                },
                {
                    "not" : {
                        "required" : [ "start_index" ]
                    }
                }
            ]
        },
        "find_data_info": {
            "type": "object",
            "properties": {
                "target" : {
                    "$ref" : "#/definitions/target_node_or_path"
                },
                "save": {
                    "$ref": "#/definitions/save_info"
                },
                "error_if_not_found": {
                    "type": "boolean",
                    "default" : true
                },
                "node_value" : {
                    "$ref" : "#/definitions/node_value_ref"
                },
                "attributes": {
                    "$ref": "#/definitions/attribute_refs"
                }
            },
            "allOf" : [
                {
                    "not" : {
                        "required" : [ "count" ]
                    }
                },
                {
                    "not" : {
                        "required" : [ "start_index" ]
                    }
                },
                {
                    "required" : [ "target" ]
                },
                {
                    "oneOf" : [
                        {
                            "allOf" : [
                                {
                                    "not" : {
                                        "required" : [ "create_if_not_found" ]
                                    }
                                },
                                {
                                    "not" : {
                                        "required" : [ "node_type" ]
                                    }
                                }
                            ]
                        },
                        {
                            "allOf" : [
                                {
                                    "required" : [ "create_if_not_found" ]
                                },
                                {
                                    "oneOf" : [
                                        {
                                            "required" : [ "node_type" ]
                                        },
                                        {
                                            "not" : {
                                                "required" : [ "node_type" ]
                                            }
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "delete_data_info": {
            "type": "object",
            "properties": {
                "target" : {
                    "$ref" : "#/definitions/target_node_or_path"
                },
                "start_index": {
                    "type": "string"
                },
                "error_if_not_found": {
                    "type": "boolean",
                    "default" : true
                }
            },
            "allOf" : [
                {
                    "not" : {
                        "required" : [ "count" ]
                    }
                },
                {
                    "not" : {
                        "required" : [ "node_value" ]
                    }
                },
                {
                    "required" : [ "target" ]
                }
            ]
        },
        "include_data_info": {
            "type": "object",
            "properties": {
                "template_files" : {
                    "type" : "array",
                    "items" : {
                        "$ref" : "#/definitions/filepath_def"
                    }
                },
                "template_directories" : {
                    "type" : "array",
                    "items" : {
                        "$ref" : "#/definitions/filepath_def"
                    }
                },
                "condition" : {
                    "$ref" : "#/definitions/condition_def",
                    "description" : "A condition that must evaluate to true in order to attempt to include the template"
                },
                "error_if_not_found" : {
                    "type" : "boolean",
                    "default" : true,
                    "description" : "Generate an error and halt execution if template file is not found, skip operation otherwise"
                },
                "count": {
                    "type": "string",
                    "default" : "1",
                    "description" : "Number of times to execute the incldue action"
                },
                "start_index": {
                    "type": "string",
                    "default" : "0",
                    "description" : "Starting index for group variable value access (only applies to variable access)"
                },
                "template_parameters": {
                    "type": "array",
                    "minItems": 0,
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description" : "Name of the variable to which the input is assigned. This value is available using {{name}} anywhere in the template",
                                "pattern" : "^[A-Za-z0-9_]*$"
                            },
                            "values": {
                                "type": "array",
                                "items" : {
                                    "type" : "string"
                                },
                                "description" : "Values to assign to the variable"
                            },
                            "error_if_empty" : {
                                "type" : "boolean",
                                "default" : false,
                                "description" : "If true, an error is generated if any value is empty (only applies to variable references). Otherwise, if false and the variable is empty, no value is added"
                            }
                        },
                        "required": [ "name", "values" ]
                    },
                    "description" : "Array of parameter values to pass to the included template as variable values for use during execution."
                }
            },
            "allOf" : [
                {
                    "oneOf" : [
                        {
                            "allOf" : [
                                {
                                    "required" : [ "template_files" ]
                                },
                                {
                                    "not" : {
                                        "required" : [ "template_directories" ]
                                    }
                                }
                            ]
                        },
                        {
                            "allOf" : [
                                {
                                    "required" : [ "template_directories" ]
                                },
                                {
                                    "not" : {
                                        "required" : [ "template_files" ]
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "not" : {
                        "required" : [ "target" ]
                    }
                }
            ]
        },
        "copy_data_info" : {
            "type" : "object",
            "properties" : {
                "source" : {
                    "$ref" : "#/definitions/target_node_or_path"
                },
                "save": {
                    "$ref": "#/definitions/save_info"
                },
                "error_if_not_found" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Throw an error if no nodes are selected for the copy source"
                },
                "include_children" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "True to copy all children of this source to the destination (attributes included)"
                },
                "destination" : {
                    "ref" : "#/definitions/copy_destination_info"
                },
                "strict" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Only valid if include_children is true. If set to true, only children in the source whose node type is valid in the destination are copied"
                },
                "copy_type" : {
                    "type" : "string",
                    "default" : "",
                    "description" : "type of copy, many_to_many copies each source to a new node of the source type under the target, many_to_one copies all source nodes under one target node",
                    "enum" : [ "many_to_many", "many_to_one" ]
                }
            },
            "allOf" : [
                {
                    "required" : [ "source", "destination" ]
                },
                {
                    "oneOf" : [
                        {
                            "allOf" : [
                                {
                                    "properties" : {
                                        "include_children" : {
                                            "enum" : [ false ]
                                        }
                                    }
                                },
                                {
                                    "not" : {
                                        "properties" : {
                                            "strict" : {
                                                "enum" : [ true ]
                                            }
                                        }
                                    }
                                }
                            ]
                        },
                        {
                            "not" : {
                                "required" : [ "include_children" ]
                            }
                        },
                        {
                            "required" : [ "include_children" ]
                        }
                    ]
                },
                {
                    "not" : {
                        "required" : [ "start_index" ]
                    }
                },
                {
                    "required" : [ "copy_type" ]
                }
            ]
        },
        "copy_destination_info" : {
            "type" : "object",
            "properties" : {
                "target" : {
                    "$ref" : "#/definitions/target_node_or_path"
                },
                "save": {
                    "$ref": "#/definitions/save_info"
                },
                "node_type": {
                    "type": "string",
                    "pattern" : "^[A-Za-z0-9_{}]*$",
                    "description" : "The type of node to create (defined by the schema). If absent, target is used as the destination and only attributes are copied"
                },
                "error_if_not_found" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Throw an error if no nodes are selected as destination"
                },
                "copy_attributes" : {
                    "type" : "object",
                    "properties" : {
                        "select" : {
                            "type" : "string",
                            "enum" : [ "all", "list", "exclude" ],
                            "default" : "all",
                            "description" : "Indicates which attributes to copy, all is all of them, list is only those listed, exclude to exclude the listed ones"
                        },
                        "attributes": {
                            "type": "array",
                            "items" : {
                                "type" : "string"
                            },
                            "description" : "Attribute names if type is list or exclude"
                        },
                        "save_attributes": {
                            "ref" : "#/definitions/attribute_save_refs"
                        }
                    }
                }
            },
            "allOf" : [
                {
                    "required" : [ "target" ]
                }
            ]
        },
        "insert_data_info" : {
            "type" : "object",
            "properties" : {
                "target" : {
                    "$ref" : "#/definitions/target_node_or_path"
                },
                "error_if_not_found" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Throw an error if no nodes are selected for copy"
                },
                "node_type" : {
                    "type" : "string",
                    "description" : "Node type of the root of the raw data that is being inserted"
                },
                "raw_data" : {
                    "type" : "string"
                }
            },
            "required" : [ "target", "node_type", "raw_data" ]
        },
        "attribute_value_mod": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "save": {
                    "$ref": "#/definitions/save_info"
                },
                "error_if_not_found" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Used for actions that are looking for the presence of the attribute"
                }
            },
            "allOf" : [
                {
                    "required": [ "name", "value" ]
                },
                {
                    "allOf" : [
                        {
                            "not" : {
                                "required" : [ "first_of" ]
                            }
                        },
                        {
                            "not" : {
                                "required" : [ "error_if_empty" ]
                            }
                        }
                    ]
                }
            ]
        },
        "attribute_values_mod": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/attribute_value_mod"
            }
        },
        "attribute_value_new" : {
            "type" : "object",
            "properties" : {
                "name" : {
                    "type" : "string"
                },
                "value" : {
                    "type": "string"
                },
                "save" : {
                    "$ref": "#/definitions/save_info"
                },
                "do_not_set" : {
                    "type": "boolean"
                },
                "optional" : {
                    "type" : "boolean",
                    "description" : "If true the value is not written if there is no value",
                    "default" : false
                }
            },
            "allOf" : [
                {
                    "oneOf" : [
                        {
                            "allOf" : [
                                {
                                    "required" : [ "do_not_set" ]
                                },
                                {
                                    "not" : {
                                        "required" : [ "value" ]
                                    }
                                }
                            ]
                        },
                        {
                            "required" : [ "value" ]
                        }
                    ]
                },
                {
                    "not" : {
                        "required" : [ "error_if_not_found" ]
                    }
                },
                {
                    "not" : {
                        "required" : [ "error_if_empty" ]
                    }
                },
                {
                    "not" : {
                        "required" : [ "first_of" ]
                    }
                },
                {
                    "required" : [ "name" ]
                }
            ]
        },
        "attribute_values_new": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/attribute_value_new"
            }
        },
        "attribute_ref" : {
            "type": "object",
            "properties": {
                "first_of" : {
                    "type" : "array",
                    "items" : {
                        "type" : "string"
                    },
                    "description" : "Finds the first attribute from the array of names (cannot be combined with 'name')"
                },
                "name": {
                    "type": "string",
                    "description" : "Find attribute with this name (cannot be combined with 'first_of')"
                },
                "save" : {
                    "$ref": "#/definitions/save_info"
                },
                "error_if_not_found" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Throw exception if the attribute is not found"
                },
                "error_if_empty" : {
                    "type" : "boolean",
                    "default" : false,
                    "description" : "Requires the attribute to be present and have a value (one of first of also)"
                }
            },
            "allOf" : [
                {
                    "oneOf" : [
                        {
                            "required" : [ "name" ]
                        },
                        {
                            "required" : [ "first_of" ]
                        }
                    ]
                },
                {
                    "required" : [ "save" ]
                },
                {
                    "allOf" : [
                        {
                            "not" : {
                                "required" : [ "do_not_set" ]
                            }
                        },
                        {
                            "not" : {
                                "required" : [ "value" ]
                            }
                        }
                    ]
                }
            ]
        },
        "attribute_refs" : {
            "type": "array",
            "items": {
                "$ref": "#/definitions/attribute_ref"
            }
        },
