ESPservice [auth_feature("DEFERRED"),version("2.0"), default_client_version("2.0"), exceptions_inline("xslt/exceptions.xslt")] ws_configurator
{
    ESPMethod getValue(GetValueRequest, GetValueResponse);
    ESPMethod setValue(SetValueRequest, SetValueResponse);
    ESPMethod getTableValue(GetTableValueRequest, GetTableValueResponse);
    ESPMethod setTableValue(SetTableValueRequest, SetTableValueResponse);
    ESPMethod getNumberOfRows(GetNumberOfRowsRequest, GetNumberOfRowsResponse);
    ESPMethod openConfigurationFile(OpenConfigurationFileRequest, OpenConfigurationFileResponse);
    ESPMethod saveConfigurationFile(SaveConfigurationFileRequest, SaveConfigurationFileResponse);
    ESPMethod saveConfigurationFileAs(SaveConfigurationFileAsRequest, SaveConfigurationFileAsResponse);
    ESPMethod getJSONForComponent(GetJSONForComponentRequest, GetJSONForComponentResponse);
    ESPMethod getNumberOfAvailableComponents(GetNumberOfAvailableComponentsRequest, GetNumberOfAvailableComponentsResponse);
    ESPMethod getComponentName(GetComponentNameRequest, GetComponentNameResponse);
    ESPMethod getNavigatorJSON(GetNavigatorJSONRequest, GetNavigatorJSONResponse);
};

SCMexportdef(ws_configurator);

SCMapi(ws_configurator) IClientws_configurator *createws_configuratorClient();
